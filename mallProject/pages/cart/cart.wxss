.revice_address{
  display: flex;
  border-bottom: 1rpx solid var(--themeColor);
}
.user_info{
  flex:4;
  padding: 20rpx;
  display: flex;
  flex-direction:column;
  /* justify-content: center;
  align-items: center; */
  font-size: 30rpx;
  font-weight: 600;
  
}
.user_tel{
  flex:2;
  padding-top: 20rpx;
  font-size: 30rpx;
  font-weight: 500;
}

.cart_item{
  display: flex;
}
.cart_title{
  padding: 20rpx;
  border-bottom: 1rpx solid var(--themeColor);
  font-size: 36rpx;
  color: var(--themeColor);
  font-weight: 800;
}
.item_select{
  flex:1;
  display: flex;
  justify-content: center;
  align-items: center;
}
.item_info{
  flex: 6;
  display: flex;
}
.goods_logo{
  flex:2;
  
  
}
.goods_logo image{
  width: 80%; 
  display: flex;
  justify-content: center;
  align-items: center;
}
.goods_info{
  flex:4;
  display: flex;
  flex-direction: column;
}
.goods_name{
  display: -webkit-box;
  overflow: hidden;
  -webkit-box-orient: vertical;
  -webkit-line-clamp: 2;
  color: #666;
}
.priceNum{
  display: flex;
}
.goods_price{
  flex:1;
  display: flex;
  align-items: center;
  color: var(--themeColor);
  font-size: 32rpx;
  font-weight: 400;
}
.goods_number{
  flex:1;
  display: flex;
  justify-content: center;
  align-items: center;
}
.number{
  padding: 20rpx;
}
.num_sub,.num_add{
  width: 55rpx;
  height:55rpx;
  font-size: 30rpx;
  font-weight: 600;
  border:1rpx solid #ccc;
  text-align: center;
}
.footer_tool{
  display: flex;
  position: absolute;
  bottom: 0;
  left: 0;
  width: 100%;
  height: 100rpx;
  border-top:1rpx solid #ccc;
  /* padding: 20rpx; */
  
}
.all_checked{
  flex:1;
  font-size: 30rpx;
  padding: 20rpx;
}
.price_total{
  padding: 10rpx;
  flex:1;
  font-size: 30rpx;
  font-weight:400;
  display: flex;
}
.money{
  display: flex;
  flex-direction: column;
  justify-content: center;
  align-items: center;
}
.money_number{
  font-size: 30rpx;
  font-weight:600;
  color:var(--themeColor);
}
.pay{
  flex:1;
  background-color:var(--themeColor);
  font-size: 35rpx;
  font-weight:600;
  color: #fff;
  display: flex;
  justify-content: center;
  align-items: center;
}

