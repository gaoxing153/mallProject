/* pages/goods_list/goods_list.wxss */
.goods_item{
  display: flex;
  border-bottom: 1rpx solid #ccc;
}
.goods_image_wrap{
  flex:2;
  display: flex;
  justify-content: center;
  align-items: center;
}
.goods_image_wrap > image{
  width:70%;
}
.goods_info_wrap{
  flex:3;
  display: flex;
  justify-content: center;
  align-items: center;
}
.goods_info{
  display: -webkit-box;
  overflow: hidden;
  -webkit-box-orient: vertical;
  -webkit-line-clamp: 2;
}
.goods_price{
  color:var(--themeColor);
  font-size: 32rpx;
}