/* pages/pay/pay.wxss */
.pay_item{
  display: flex;
  border-bottom: 1rpx solid #ccc;
}
.pay_title{
  padding: 20rpx;
  border-bottom: 1rpx solid var(--themeColor);
  font-size: 36rpx;
  color: var(--themeColor);
  font-weight: 800;
}
.item_select{
  flex:1;
  display: flex;
  justify-content: center;
  align-items: center;
}
.item_info{
  flex: 6;
  display: flex;
}
.goods_logo{
  flex:2;
  
  
}
.goods_logo image{
  width: 80%; 
  display: flex;
  justify-content: center;
  align-items: center;
}
.goods_info{
  flex:4;
  display: flex;
  flex-direction: column;
}
.goods_name{
  display: -webkit-box;
  overflow: hidden;
  -webkit-box-orient: vertical;
  -webkit-line-clamp: 2;
  color: #666;
}
.priceNum{
  display: flex;
  padding-top: 30rpx;
}
.goods_price{
  flex:1;
  display: flex;
  align-items: flex-end;
  color: var(--themeColor);
  font-size: 32rpx;
  font-weight: 400;
}
.goods_number{
  flex:1;
  display: flex;
  justify-content: flex-end;
  align-items: center;
}
.number{ 
  font-size: 32rpx;
  font-weight: 600;
  padding:0 20rpx 5rpx 10rpx;
}
.fuhao{
  font-size: 25rpx;
}
.footer_tool{
  display: flex;
  position: absolute;
  bottom: 0;
  left: 0;
  width: 100%;
  height: 100rpx;
  border-top:1rpx solid #ccc;
}
.all_checked{
  flex:1;
}
.price_total{
  padding: 10rpx;
  flex:1;
  font-size: 30rpx;
  font-weight:400;
  display: flex;
}
.money{
  display: flex;
  flex-direction: column;
  justify-content: center;
  align-items: center;
}
.money_number{
  font-size: 30rpx;
  font-weight:600;
  color:var(--themeColor);
}
.pay_money{
  flex:1;
  background-color:var(--themeColor);
  font-size: 35rpx;
  font-weight:600;
  color: #fff;
  display: flex;
  justify-content: center;
  align-items: center;
}